<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <div class="dropdown">
                <button class="btn btn-default dropdown-toggle text-light" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Hello @User.Identity.Name!
                </button>
                <div class="dropdown-menu menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item text-light" asp-controller="User" asp-action="UserPage"> View profile</a>
                    <a class="dropdown-item text-light" asp-controller="User" asp-action="EditUser"> Edit profile</a>
                </div>
            </div>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Logout">Log out</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Login">Log in</a>
        </li>
    }
</ul>
