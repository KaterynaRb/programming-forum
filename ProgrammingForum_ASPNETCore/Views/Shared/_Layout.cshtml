<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProgrammingForum_ASPNETCore</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProgrammingForum_ASPNETCore.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar nav-tabs navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">Programmers Space</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Post" asp-action="CreatePost">Ask question</a>
                        </li>
                        <li class="nav-item">
                            <form asp-action="SearchPosts" asp-controller="Post" method="get">
                                <div class="input-group">
                                    <input type="text" name="SearchString" class="input-search form-control" placeholder="Search for..." value="@ViewData["CurrentFilter"]" />
                                    <span class="input-group-btn">
                                        <button class="btn btn-default navbar-btn" type="submit"><i class="fa-solid fa-magnifying-glass text-light"></i></button>
                                    </span>
                                </div>
                            </form>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <div class="dropdown">
                                    <button class="btn btn-default dropdown-toggle text-light" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Edit Forum
                                    </button>
                                    <div class="dropdown-menu menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item text-light" asp-controller="User" asp-action="AllUsers">Users</a>
                                        <a class="dropdown-item text-light" asp-controller="Topic" asp-action="AllTopics">Topics</a>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                    <partial name="~/Views/Account/_LoginMenuPartial.cshtml" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container justify-content-center">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer fixed-bottom">
        <div class="container">
            &copy; 2022 - Programmers Space
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
